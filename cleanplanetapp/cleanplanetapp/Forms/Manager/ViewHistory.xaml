<Window x:Class="cleanplanetapp.Forms.Manager.ViewHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cleanplanetapp.Forms.Manager"
        mc:Ignorable="d"
        Title="История изменения рейтинга" Height="400" Width="495">

    <Window.Resources>
        <!-- Шаблон карточки партнёра -->
        <DataTemplate x:Key="PartnerChangeHistory">
            
            <Border BorderBrush="Gray"
                BorderThickness="1"
                Margin="5"                     
            Padding="10"
                CornerRadius="5"
                Background="White"
                HorizontalAlignment="Stretch">
                <StackPanel>
                    <!-- Имя партнёра и сотрудника -->
                    <TextBlock FontWeight="Bold" FontSize="14" >
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Рейтинг: {0} -> {1}">
                                <Binding Path="OldRating" />
                                <Binding Path="NewRating" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                  
                    <TextBlock Margin="0,5,0,0" 
                Text="{Binding Employee.FullName, StringFormat='Изменил сотрудник: {0}'}" />

                   
                    <!-- Дата изменения -->
                    <TextBlock Margin="0,5,0,0" 
               Text="{Binding ChangedAt, StringFormat='Дата изменения: {0:dd.MM.yyyy HH:mm}'}" />

                    <!-- Причина изменения 
                    <TextBlock Margin="0,5,0,0" 
               Text="{Binding Reason, StringFormat='Причина: {0}'}" /> -->
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <ListBox x:Name="lbData"
         ItemsSource="{Binding PartnerRatingHistory}"
         ItemTemplate="{StaticResource PartnerChangeHistory}"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#E0FFFF ">
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin"  Value="0"/>
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</Window>
