<Window x:Class="cleanplanetapp.Forms.Manager.MainManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная страница"
        Height="450" Width="1019"
        FontFamily="Franklin Gothic Medium">

    <Window.Resources>
        <!-- Шаблон карточки партнёра -->
        <DataTemplate x:Key="PartnerCardTemplate">
            <!-- HorizontalAlignment="Stretch" гарантирует, что Border займет всю ширину ListBoxItem -->
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="5"                     
                Padding="10"
                    CornerRadius="5"
                    Background="White"
                    HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="{Binding Name}"
                               FontWeight="Bold"
                               FontSize="14"/>
                    <TextBlock Text="{Binding Contact}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <DockPanel LastChildFill="True">

       
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                    Background="White" Height="50">
            <TextBlock Text="CleanPlanet"
                       VerticalAlignment="Center"
                       FontSize="30" FontWeight="Bold"
                       Margin="10,0"/>
        </StackPanel>

      
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    Background="White" Height="50" VerticalAlignment="Center">

            <!-- Кол‑во записей -->
            <Label x:Name="labelItemCount" Content="{Binding ItemCount}"
                   Height="28" Width="250"
                   FontSize="14"/>

            <!-- Текущая роль -->
            <Label x:Name="labelInfo" Content="{Binding RoleInfo}"
                   Height="28" Width="180"
                   FontSize="14" Margin="20,0,0,0"/>

            <!-- Поиск (можно пока отключить, если не нужен) -->
            <Label Content="Поиск" Height="28" FontSize="14" Margin="20,0,0,0"/>
            <TextBox x:Name="tbSearch"
                     Height="24" Width="150"
                     FontSize="14"
                     Margin="5,0,0,0"/>
        </StackPanel>

        <Grid>
            <ListBox x:Name="lbData"
                     ItemsSource="{Binding Partners}"
                     ItemTemplate="{StaticResource PartnerCardTemplate}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" MouseDoubleClick="lbData_MouseDoubleClick">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin"  Value="0"/>
                </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
