<Window x:Name="ConnectForm" x:Class="cleanplanetapp.Forms.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cleanplanetapp.Forms"
        mc:Ignorable="d"
        Title="Форма подключения" Height="450" Width="800" FontFamily="Franklin Gothic Medium" ResizeMode="CanMinimize" Background="White">

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelName" Content="CleanPlanet" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" Width="269" FontFamily="Franklin Gothic Medium" FontSize="48" Height="63" Foreground="#00CED1"/>
        <Label x:Name="labelWelcome" Content="Добро пожаловать" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Width="192" FontFamily="Franklin Gothic Medium" FontSize="22" Height="41"/>
        <Label x:Name="labelStatusConnect" Content="Статус подключения:" HorizontalAlignment="Left" Margin="257,145,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Medium" FontSize="14"/>
        <Label x:Name="labelStatus" Content="Отключено" HorizontalAlignment="Left" Margin="429,145,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Medium" FontSize="14" RenderTransformOrigin="-0.019,0.586"/>
        <Button x:Name="btnLogin" Background="#00CED1" Foreground="White" Padding="5" Margin="0,289,358,0" Height="40" VerticalAlignment="Top" Click="btnLogin_Click" HorizontalAlignment="Right" Width="84">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="16">
                <Path Data="M2 2.75C2 1.784 2.784 1 3.75 1h2.5a.75.75 0 0 1 0 1.5h-2.5a.25.25 0 0 0-.25.25v10.5c0 .138.112.25.25.25h2.5a.75.75 0 0 1 0 1.5h-2.5A1.75 1.75 0 0 1 2 13.25Zm6.56 4.5h5.69a.75.75 0 0 1 0 1.5H8.56l1.97 1.97a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215L6.22 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.749.749 0 0 1 1.275.326.749.749 0 0 1-.215.734Z" Fill="White" Width="20" Height="20"/>
            </StackPanel>
        </Button>
        <Label x:Name="labelLogin" Content="Логин" HorizontalAlignment="Left" Margin="304,196,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Medium" FontSize="14"/>
        <Label x:Name="labelPassword" Content="Пароль" HorizontalAlignment="Left" Margin="301,243,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Medium" FontSize="14"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Margin="392,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontFamily="Franklin Gothic Medium" FontSize="14" Background="#E0FFFF "/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="392,247,0,0" VerticalAlignment="Top" Width="154" FontFamily="Franklin Gothic Medium" FontSize="14" Background="#E0FFFF "/>

    </Grid>
</Window>
